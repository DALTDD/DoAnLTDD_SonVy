<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ChangePasswordActivity">

    <TextView
        android:id="@+id/textView41"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="24dp"
        android:text="Mật khẩu cũ"
        android:textColor="@color/black"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/edtMatKhauCuCP"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:background="@drawable/custom_edt_delivery"
        android:ems="10"
        android:inputType="textPassword"
        android:padding="8dp"
        android:hint="Nhập mật khẩu cũ"
        app:layout_constraintEnd_toEndOf="@+id/textView41"
        app:layout_constraintStart_toStartOf="@+id/textView41"
        app:layout_constraintTop_toBottomOf="@+id/textView41" />

    <TextView
        android:id="@+id/textView42"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:text="Mật khẩu mới"
        android:textColor="@color/black"
        app:layout_constraintEnd_toEndOf="@+id/edtMatKhauCuCP"
        app:layout_constraintStart_toStartOf="@+id/edtMatKhauCuCP"
        app:layout_constraintTop_toBottomOf="@+id/edtMatKhauCuCP" />

    <EditText
        android:id="@+id/edtMatKhauMoiCP"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:ems="10"
        android:inputType="textPassword"
        android:background="@drawable/custom_edt_delivery"
        android:padding="8dp"
        android:hint="Nhập mật khẩu mới"
        app:layout_constraintEnd_toEndOf="@+id/textView42"
        app:layout_constraintStart_toStartOf="@+id/textView42"
        app:layout_constraintTop_toBottomOf="@+id/textView42" />

    <TextView
        android:id="@+id/textView44"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:text="Xác nhận mật khẩu mới"
        android:textColor="@color/black"
        app:layout_constraintEnd_toEndOf="@+id/edtMatKhauMoiCP"
        app:layout_constraintStart_toStartOf="@+id/edtMatKhauMoiCP"
        app:layout_constraintTop_toBottomOf="@+id/edtMatKhauMoiCP" />

    <EditText
        android:id="@+id/edtNhapLaiMKCP"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:ems="10"
        android:inputType="textPassword"
        android:background="@drawable/custom_edt_delivery"
        android:padding="8dp"
        android:hint="Nhập lại mật khẩu mới"
        app:layout_constraintEnd_toEndOf="@+id/textView44"
        app:layout_constraintStart_toStartOf="@+id/textView44"
        app:layout_constraintTop_toBottomOf="@+id/textView44" />

    <CheckBox
        android:id="@+id/chkHienThiMKChangePassword"
        android:layout_width="0dp"
        android:layout_height="30dp"
        android:layout_marginTop="5dp"
        android:text="Hiển thị mật khẩu"
        app:layout_constraintEnd_toEndOf="@+id/edtNhapLaiMKCP"
        app:layout_constraintStart_toStartOf="@+id/edtNhapLaiMKCP"
        app:layout_constraintTop_toBottomOf="@+id/edtNhapLaiMKCP" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@drawable/custom_border_topleft_topright"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <Button
            android:id="@+id/btnXacNhanChangeMK"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:background="@drawable/color_gradient"
            app:backgroundTint="@null"
            android:text="Xác nhận"
            android:textAllCaps="false"
            android:layout_margin="4dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>