<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".InfoAddressActivity">
    <EditText
        android:id="@+id/edtSDTRegister"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        android:background="@drawable/custom_edt_address"
        android:ems="10"
        android:inputType="number"
        android:padding="10dp"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="@+id/textView4"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/textView4"
        app:layout_constraintTop_toBottomOf="@+id/textView4" />

    <TextView
        android:id="@+id/txtQuan"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:background="@drawable/custom_spinner"
        android:drawableEnd="@drawable/ic_baseline_arrow_drop_down_24"
        android:hint="Chọn thành quận/huyện"
        android:paddingLeft="16dp"
        android:paddingTop="10dp"
        android:paddingRight="16dp"
        android:paddingBottom="5dp"
        android:textColor="@color/black"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="@+id/txtThanhPho"
        app:layout_constraintStart_toStartOf="@+id/txtThanhPho"
        app:layout_constraintTop_toBottomOf="@+id/txtThanhPho" />

    <TextView
        android:id="@+id/txtThanhPho"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:background="@drawable/custom_spinner"
        android:drawableEnd="@drawable/ic_baseline_arrow_drop_down_24"
        android:hint="Chọn thành phố/tỉnh"
        android:paddingLeft="16dp"
        android:paddingTop="10dp"
        android:paddingBottom="5dp"
        android:paddingRight="16dp"
        android:textColor="@color/black"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="@+id/edtSDTRegister"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/edtSDTRegister"
        app:layout_constraintTop_toBottomOf="@+id/edtSDTRegister" />

    <TextView
        android:id="@+id/txtPhuong"
        android:background="@drawable/custom_spinner"
        android:drawableEnd="@drawable/ic_baseline_arrow_drop_down_24"
        android:hint="Chọn phường/xã/thị trấn"
        android:paddingLeft="16dp"
        android:paddingTop="10dp"
        android:paddingBottom="5dp"
        android:paddingRight="16dp"
        android:textColor="@color/black"
        android:textSize="16sp"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        app:layout_constraintEnd_toEndOf="@+id/txtQuan"
        app:layout_constraintStart_toStartOf="@+id/txtQuan"
        app:layout_constraintTop_toBottomOf="@+id/txtQuan" />

    <EditText
        android:id="@+id/edtSoNha"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        android:background="@drawable/custom_edt_address"
        android:ems="10"
        android:inputType="textPersonName"
        android:padding="10dp"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="@+id/txtQuenMKLogin"
        app:layout_constraintStart_toStartOf="@+id/txtQuenMKLogin"
        app:layout_constraintTop_toBottomOf="@+id/txtQuenMKLogin" />

    <EditText
        android:id="@+id/edtHoTen"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="2dp"
        android:layout_marginEnd="24dp"
        android:background="@drawable/custom_edt_address"
        android:ems="10"
        android:inputType="textPersonName"
        android:padding="10dp"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="80dp"
        android:layout_marginEnd="24dp"
        android:text="Họ và tên người nhận:"
        android:textColor="#000000"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="Số điện thoại:"
        android:textColor="#000000"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="@+id/edtHoTen"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/edtHoTen"
        app:layout_constraintTop_toBottomOf="@+id/edtHoTen" />

    <TextView
        android:id="@+id/txtQuenMKLogin"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="Số nhà, đường:"
        android:textColor="#000000"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="@+id/txtPhuong"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/txtPhuong"
        app:layout_constraintTop_toBottomOf="@+id/txtPhuong" />

    <Button
        android:id="@+id/btnLuuDiaChi"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:background="@drawable/rounded_button"
        android:text="Lưu địa chỉ"
        android:textAllCaps="false"
        android:textSize="16sp"
        app:backgroundTint="@null"
        app:layout_constraintEnd_toEndOf="@+id/edtSoNha"
        app:layout_constraintStart_toStartOf="@+id/edtSoNha"
        app:layout_constraintTop_toBottomOf="@+id/edtSoNha" />
</androidx.constraintlayout.widget.ConstraintLayout>