<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    app:cardCornerRadius="10dp"
    app:cardElevation="5dp"
    android:layout_margin="6dp">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <FrameLayout
            android:id="@+id/frameLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <ImageView
                android:id="@+id/imgItemSachHome"
                android:layout_width="190dp"
                android:layout_height="190dp"
                app:srcCompat="@drawable/sachmau" />

            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end">

                <ImageView
                    android:id="@+id/imgTagDiscount"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_gravity="end"
                    app:srcCompat="@drawable/price_tag_1" />

                <TextView
                    android:id="@+id/txtPTGiamGia"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="-20%"
                    android:textColor="@color/white"
                    android:textSize="16sp" />
            </FrameLayout>
        </FrameLayout>

        <TextView
            android:id="@+id/txtTenSachHome"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:text="Bé Tập Tô Màu Tập 1"
            android:textColor="@color/black"
            android:textSize="18sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="@+id/frameLayout"
            app:layout_constraintTop_toBottomOf="@+id/frameLayout"
            android:maxLines="2"/>

        <TextView
            android:id="@+id/txtGiaGocHome"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="100.000 đ"
            app:layout_constraintEnd_toEndOf="@+id/txtTenSachHome"
            app:layout_constraintStart_toStartOf="@+id/txtTenSachHome"
            app:layout_constraintTop_toBottomOf="@id/txtTenSachHome" />

        <TextView
            android:id="@+id/txtGIaKMHome"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:text="100.000 đ"
            android:textColor="@color/black"
            android:textSize="18sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="@+id/txtGiaGocHome"
            app:layout_constraintStart_toStartOf="@+id/txtGiaGocHome"
            app:layout_constraintTop_toBottomOf="@id/txtGiaGocHome" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>
