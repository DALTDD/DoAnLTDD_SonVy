<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <layer-list>
            <item>
                <shape>

                    <solid android:color="#B3C4C4C4" />
                </shape>
            </item>
            <item android:bottom="1dp" android:right="1dp">
                <shape>
                    <gradient android:angle="90"
                        android:startColor="@color/startGradient"
                        android:endColor="@color/endGradient" />
                    <stroke android:width="1dp" android:color="#bababa" />
                    <corners android:radius="15dp" />
                    <padding android:bottom="15dp" android:left="15dp" android:top="15dp" android:right="15dp" />
                </shape>
            </item>
        </layer-list>
    </item>
</selector>